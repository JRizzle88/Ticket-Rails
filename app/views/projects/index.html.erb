<% provide(:title, 'Progressor Projects') %>
<div class="container">
  <div class="row">

    <% if current_user %>
    <div class="col-xs-12 panel">
      <div class="col-sm-9">
        <% if @projectcount == 0 %>
          <h4>You don't have any projects going on. Let's get started.</h4>
        <% else %>
          <h4>You are currently working on <%= @projectcount %> <%= project_count_label %>.</h4>
        <% end %>
      </div>
      <div class="col-sm-3">
        <%= link_to 'New Project', new_project_path, :class => "btn btn-success pull-right" %>
      </div>
    </div>
      <% @projects.each do |project| %>
        <div class="project col-xs-12 panel">
          <div class="col-xs-4">
            <h4><span class="glyphicon glyphicon-folder-open"></span><%= link_to project.name, project %></h4>
          </div>
          <div class="col-xs-3">
            <b>Created:</b> <%= project.created_at.to_s(:custom_time) %><br>
          </div>
          <div class="col-xs-2">
            <b>Due Date:</b> <%= project.due_date %>
          </div>
          <div class="col-xs-3">
            <div class="dropdown pull-right project-actions">
              <button class="btn btn-lg btn-primary" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                <span class="glyphicon-class glyphicon glyphicon-cog"></span>
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                <li><%= link_to 'Show', project, class: 'glyphicon glyphicon-eye-open' %></li>
                <li><%= link_to 'Edit', edit_project_path(project), class: 'glyphicon glyphicon-pencil' %></li>
                <li><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-remove' %></li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>
</div>
