<div class="container">

    <h3>Invitations</h3>
    <%= render 'layouts/admin/dashboardnavigation' %>
  <div class="row">
    <div class="col-sm-8">
      <table class="table table-striped">
        <tbody>
          <tr>
            <th>ID</th>
            <th>Unconfirmed Email</th>
            <th>Sent</th>
            <th>Accepted</th>
          </tr>
          <% @users.each do |user| %>
          <tr>
              <td><%= user.invited_by_id if user.invited_by_id %></td>
              <td><%= user.unconfirmed_email if user.unconfirmed_email %></td>
              <td><%= user.invitation_sent_at.strftime("%d %b. %Y - %H:%M") if user.invitation_sent_at %></td>
              <td><%= user.invitation_accepted_at.strftime("%d %b. %Y") if user.invitation_accepted_at %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-4">
      <div class="panel">

      </div>
    </div>
  </div>
</div>
