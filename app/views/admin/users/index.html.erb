<% provide(:title, 'Progressor Users') %>
<div class="container">
  <div class="row">
    <div class="panel">
      <%= form_tag admin_users_path, method: :get do %>
         <div class="input-group">
          <%= text_field_tag :search, params[:search], class: 'form-control', :placeholder => 'Search by Email Address' %>
          <span class="input-group-btn">
          <%= submit_tag "Search", :name => nil, class: 'btn btn-success' %>
          </span>
        </div>
      <% end %>
    </div>
    <div class="column">
      <table class="table table-striped table-hover">
        <tbody>
          <tr>
            <th>View</th>
            <th>Edit</th>
            <th>Name</th>
            <th>Email Address</th>
            <th>User Role</th>
            <th>Update</th>
            <th>Registered</th>
            <th>Last Login</th>
            <th>Delete</th>
          </tr>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= will_paginate @users %>
  </div>
</div>
