<div class="container">
<div class="row">

    <h3>Dashboard</h3>
    <%= render 'layouts/admin/dashboardnavigation' %>

      <div class="col-sm-6 no-padding-left">
        <div class="panel">
          <h3>Statistics</h3>
          Total Users: <%= @usersCount %>
        </div>
      </div>

      <div class="col-sm-6 no-padding-right">
          <h3>Newest Users</h3>
          <table class="table table-striped">
            <tbody>
              <tr>
                <th>Preview</th>
                <th>Name</th>
                <th>Email</th>
              </tr>
            <% @users.each do |user| %>
              <tr>
                <td><%= link_to("", user_path(user), :class => 'glyphicon glyphicon-user btn btn-primary') %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @users %>
      </div>

    </div> <!-- Row -->
</div> <!-- Container -->
