
    <div class="panel">
      <div id="comment-id-#{@comment.id}">
        <p>
          <b>User</b>
          <%= @ticket.user.name %>
        </p>

        <p>
          <b>Comment:</b>
          <%= sanitize(comment.body) %>
        </p>
        <% if current_user.admin? %>
        <p>
          <%= link_to "", ticket_comment_path(comment.ticket, comment), :method => :delete, data: { :confirm => "Are you sure you want to delete this comment?" },
                        :class => 'glyphicon glyphicon-remove btn btn-danger', remote: true,
                        title: 'Delete comment', rel: 'tooltip' %>
        </p>

        <% end %>
      </div>
    </div>
